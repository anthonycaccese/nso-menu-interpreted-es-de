<theme>
   <colorScheme name="controllers,custom">
      <variables>
         <!--
         ///
         All Views
         ///
         -->
         <avatarImage>./_inc/images/avatar-default.png</avatarImage>
         <avatarBorderShadowColor>000000</avatarBorderShadowColor>
         <avatarBorderColor>bbbbbb</avatarBorderColor>
         <menuBarColor>000000</menuBarColor>
         <menuBarShadowColor>000000aa</menuBarShadowColor>
         <menuBarPrimaryTextColor>ffffff</menuBarPrimaryTextColor>
         <menuBarSecondaryTextColor>777777</menuBarSecondaryTextColor>
         <!--
         ///
         System View
         ///
         -->
         <carouselImagePath>./_inc/systems/controllers/${system.theme}.png</carouselImagePath>
         <carouselImageColor>ffffff</carouselImageColor>
         <carouselImageSize>0.55 0.65</carouselImageSize>
         <gameImageType>screenshot</gameImageType>
         <gameImageColor>ffffff00</gameImageColor>
         <gameImageSaturation>0</gameImageSaturation>
         <staticImagePath>${spacerImage}</staticImagePath>
         <staticImageColor>${systemColor}</staticImageColor>
         <staticImageTile>true</staticImageTile>
         <!--
         ///
         Gamelist View
         ///
         -->
         <selectorColor>ffffff</selectorColor>
      </variables>
